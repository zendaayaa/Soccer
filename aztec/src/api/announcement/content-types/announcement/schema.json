{
  "kind": "collectionType",
  "collectionName": "announcements",
  "info": {
    "singularName": "announcement",
    "pluralName": "announcements",
    "displayName": "Announcement",
    "description": "News and announcements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true,
      "maxLength": 200
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "news",
        "event",
        "update",
        "alert"
      ],
      "default": "news",
      "required": true
    },
    "priority": {
      "type": "enumeration",
      "enum": [
        "high",
        "normal",
        "low"
      ],
      "default": "normal",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}